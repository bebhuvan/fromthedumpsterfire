---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArchiveSearch from '../components/ArchiveSearch.astro';
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const allVideos = await getCollection('videos');

// Combine articles and videos into a single array with type information
const allContent = [
  ...allArticles.map(article => ({ ...article, contentType: 'article' as const })),
  ...allVideos.map(video => ({ ...video, contentType: 'video' as const }))
];

const sortedContent = allContent.sort(
  (a, b) => b.data.publishedDate.valueOf() - a.data.publishedDate.valueOf()
);

// Group content by year and month
const contentByDate = sortedContent.reduce((acc, item) => {
  const year = item.data.publishedDate.getFullYear();
  const month = item.data.publishedDate.toLocaleDateString('en-US', { month: 'long' });
  const key = `${year}-${month}`;

  if (!acc[key]) {
    acc[key] = {
      year,
      month,
      items: []
    };
  }

  acc[key].items.push(item);
  return acc;
}, {} as Record<string, { year: number; month: string; items: typeof allContent }>);

const groupedContent = Object.values(contentByDate);
const totalCount = allArticles.length + allVideos.length;
---

<BaseLayout title="Archive - From The Dumpster Fire">
  <div class="container">
    <div class="archive-page">
      <header class="page-header">
        <h1>Archive</h1>
        <p class="archive-count">{totalCount} items rescued from the flames</p>
      </header>

      <div class="category-filters">
        <button class="filter-btn active" data-category="all">
          All ({totalCount})
        </button>
        <button class="filter-btn" data-category="article">
          Articles ({allArticles.length})
        </button>
        <button class="filter-btn" data-category="video">
          Videos ({allVideos.length})
        </button>
      </div>

      <ArchiveSearch />

      <div class="archive-content">
        {groupedContent.map(group => (
          <section class="archive-group">
            <h2 class="archive-period">{group.month} {group.year}</h2>
            <div class="articles-list">
              {group.items.map(item => (
                <article class={`archive-item ${item.contentType}`} data-content-type={item.contentType}>
                  <a href={item.contentType === 'article' ? `/articles/${item.slug}` : `/videos/${item.slug}`} class="archive-link">
                    <div class="archive-item-header">
                      <span class="article-type">
                        {item.contentType === 'article' ? item.data.articleType : 'video'}
                      </span>
                      <span class="article-date">
                        {item.data.publishedDate.toLocaleDateString('en-US', {
                          month: 'short',
                          day: 'numeric'
                        })}
                      </span>
                    </div>
                    <h3 class="archive-title">{item.data.title}</h3>
                    <p class="archive-excerpt">{item.data.excerpt}</p>
                    <div class="archive-meta">
                      {item.contentType === 'article' ? (
                        <>
                          {item.data.author && <span>{item.data.author}</span>}
                          {item.data.author && <span class="separator">•</span>}
                          <span>{item.data.readingTime} min read</span>
                        </>
                      ) : (
                        <>
                          <span>{item.data.creator}</span>
                          {item.data.duration && <span class="separator">•</span>}
                          {item.data.duration && <span>{item.data.duration}</span>}
                        </>
                      )}
                    </div>
                  </a>
                </article>
              ))}
            </div>
          </section>
        ))}
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .archive-page {
    max-width: 900px;
    margin: 0 auto;
    padding: var(--space-2xl) 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding-bottom: var(--space-xl);
    border-bottom: 2px solid var(--ink-whisper);
  }

  .page-header h1 {
    font-size: clamp(3rem, 6vw, 4.5rem);
    margin-bottom: var(--space-sm);
  }

  .archive-count {
    font-family: var(--font-sans);
    font-size: 1rem;
    color: var(--ink-medium);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    font-weight: 600;
  }

  .category-filters {
    display: flex;
    justify-content: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-xl);
    flex-wrap: wrap;
  }

  .filter-btn {
    font-family: var(--font-sans);
    font-size: 0.9rem;
    font-weight: 600;
    padding: var(--space-xs) var(--space-md);
    border: 2px solid var(--ink-whisper);
    background: var(--bg-canvas);
    color: var(--ink-medium);
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.2s ease;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .filter-btn:hover {
    border-color: var(--flame);
    color: var(--flame);
  }

  .filter-btn.active {
    background: var(--flame);
    color: var(--bg-cream);
    border-color: var(--flame);
  }

  .archive-group {
    margin-bottom: var(--space-2xl);
  }

  .archive-period {
    font-size: 1.75rem;
    color: var(--flame);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-sm);
    border-bottom: var(--border-fine) solid var(--ink-whisper);
  }

  .articles-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .archive-item {
    background: var(--bg-canvas);
    border: var(--border-fine) solid var(--ink-whisper);
    box-shadow: var(--shadow-soft);
    transition: all 0.3s ease;
  }

  .archive-item:hover {
    box-shadow: var(--shadow-lift);
    transform: translateY(-2px);
  }

  .archive-link {
    display: block;
    padding: var(--space-lg);
    text-decoration: none;
    color: inherit;
  }

  .archive-item-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: var(--space-sm);
  }

  .article-type {
    font-family: var(--font-sans);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    color: var(--ink-light);
  }

  .article-date {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--ink-medium);
  }

  .archive-title {
    font-size: 1.75rem;
    margin-bottom: var(--space-sm);
    line-height: 1.3;
    color: var(--ink);
  }

  .archive-excerpt {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--ink-medium);
    margin-bottom: var(--space-sm);
  }

  .archive-meta {
    font-family: var(--font-sans);
    font-size: 0.85rem;
    color: var(--ink-light);
    display: flex;
    gap: var(--space-xs);
  }

  .separator {
    color: var(--ink-whisper);
  }

  @media (max-width: 768px) {
    .archive-title {
      font-size: 1.5rem;
    }

    .archive-excerpt {
      font-size: 1rem;
    }
  }
</style>

<script>
  // Category filter functionality
  function initCategoryFilters() {
    const filterButtons = document.querySelectorAll('.filter-btn') as NodeListOf<HTMLButtonElement>;
    const archiveItems = document.querySelectorAll('.archive-item') as NodeListOf<HTMLElement>;
    const archiveGroups = document.querySelectorAll('.archive-group') as NodeListOf<HTMLElement>;

    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = button.dataset.category;

        // Update active button
        filterButtons.forEach(btn => btn.classList.remove('active'));
        button.classList.add('active');

        // Filter items
        archiveItems.forEach(item => {
          const itemType = item.dataset.contentType;

          if (category === 'all' || itemType === category) {
            item.style.display = '';
          } else {
            item.style.display = 'none';
          }
        });

        // Show/hide groups based on visible items
        archiveGroups.forEach(group => {
          const visibleItems = group.querySelectorAll('.archive-item:not([style*="display: none"])');
          group.style.display = visibleItems.length > 0 ? '' : 'none';
        });
      });
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCategoryFilters);
  } else {
    initCategoryFilters();
  }
</script>
