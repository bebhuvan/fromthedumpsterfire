<style>
  .about-page {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--space-2xl) 0;
  }

  .page-header {
    text-align: center;
    margin-bottom: var(--space-2xl);
    padding: var(--space-2xl) 0 var(--space-xl);
    position: relative;
  }

  .page-header::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 400px;
    height: 400px;
    background: radial-gradient(circle, rgba(217, 123, 103, 0.08) 0%, transparent 70%);
    pointer-events: none;
    z-index: -1;
  }

  .page-header h1 {
    font-size: clamp(3rem, 6vw, 4.5rem);
    margin-bottom: var(--space-md);
    font-weight: 400;
    letter-spacing: -0.02em;
    color: var(--ink);
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--ink-medium);
    font-style: italic;
    line-height: 1.6;
  }

  .content {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--ink);
  }

  /* Drop cap on first paragraph */
  .content p:first-of-type::first-letter {
    font-family: var(--font-display);
    font-size: 4.5rem;
    font-weight: 400;
    line-height: 0.85;
    float: left;
    margin: 0.1rem 0.15rem 0 0;
    color: var(--flame);
  }

  .content p {
    margin-bottom: 2rem;
  }

  .links-section {
    margin-top: var(--space-2xl);
    padding: var(--space-2xl);
    background: linear-gradient(135deg, var(--pastel-peach), var(--pastel-mint));
    border: var(--border-fine) solid var(--ink-whisper);
    box-shadow: var(--shadow-soft);
    border-radius: 4px;
  }

  .links-header {
    text-align: center;
    margin-bottom: var(--space-xl);
  }

  .links-heading {
    font-size: 2rem;
    font-weight: 400;
    margin-bottom: var(--space-sm);
    color: var(--ink);
  }

  .links-decoration {
    font-size: 1.5rem;
    color: var(--flame);
    opacity: 0.3;
  }

  .links-container {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-xl);
    max-width: 700px;
    margin: 0 auto;
  }

  .links-group {
    background: var(--bg-canvas);
    padding: var(--space-lg);
    border: var(--border-fine) solid var(--ink-whisper);
    box-shadow: var(--shadow-soft);
    border-radius: 4px;
  }

  .group-header {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    margin-bottom: var(--space-md);
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--ink-whisper);
  }

  .group-icon {
    font-size: 1.5rem;
  }

  .group-title {
    font-family: var(--font-sans);
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    font-weight: 700;
    color: var(--ink-medium);
    margin: 0;
  }

  .links-grid {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .link-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    text-decoration: none;
    color: var(--ink);
    font-size: 1rem;
    font-weight: 400;
    padding: var(--space-sm) var(--space-md);
    transition: all 0.2s ease;
    background: var(--bg-cream);
    border: 1px solid transparent;
    border-radius: 4px;
  }

  .link-label {
    flex: 1;
  }

  .link-arrow {
    color: var(--ink-light);
    transition: all 0.2s ease;
    opacity: 0.5;
  }

  .link-item:hover {
    background: var(--flame-light);
    border-color: var(--flame);
    transform: translateX(4px);
  }

  .link-item:hover .link-label {
    color: var(--flame);
  }

  .link-item:hover .link-arrow {
    opacity: 1;
    color: var(--flame);
    transform: translateX(4px);
  }

  @media (max-width: 768px) {
    .content {
      font-size: 1.05rem;
    }

    .links-section {
      margin-top: var(--space-xl);
      padding: var(--space-md);
      box-shadow: none;
    }

    .links-heading {
      font-size: 1.5rem;
    }

    .links-container {
      grid-template-columns: 1fr;
      gap: var(--space-md);
    }

    .links-group {
      padding: var(--space-md);
      box-shadow: none;
      border: 2px solid var(--ink-whisper);
    }

    .group-header {
      margin-bottom: var(--space-sm);
      padding-bottom: var(--space-sm);
    }

    .link-item {
      font-size: 0.95rem;
      padding: var(--space-sm) var(--space-sm);
    }
  }
</style>
